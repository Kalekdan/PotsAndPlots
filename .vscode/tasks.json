{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Project",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"run",
				"build"
			],
			"group": "build",
			"problemMatcher": [
				"$tsc"
			],
			"isBackground": false
		},
		{
			"label": "Run Tests",
			"type": "shell",
			"command": "pnpm",
			"args": [
				"run",
				"test",
				"--",
				"--watchAll=false"
			],
			"group": "test",
			"problemMatcher": [],
			"isBackground": false
		}
	]
}